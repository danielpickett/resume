{
  "name": "static-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "http://danielpickett.github.io/resume",
  "scripts": {
    "start": "nodemon --watch src -e ts,tsx,scss --exec \"yarn build\" & yarn preview",
    "build": "yarn copy-assets && yarn build-html && yarn build-styles",
    "copy-assets": "mkdir -p public/assets && cp -R src/assets/. public/assets",
    "build-html": "tsc && node --experimental-specifier-resolution=node scripts/build.js",
    "build-styles": "sass src/index.scss public/style.css",
    "preview": "browser-sync 'public' -w --no-notify",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d public"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "browser-sync": "^2.27.10",
    "nodemon": "^2.0.20",
    "sass": "^1.54.9",
    "typescript": "^4.6.4",
    "gh-pages": "^3.2.0"
  }
}
